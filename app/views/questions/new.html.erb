<% if question.errors.any? %>
  <h2>The following errors prevented the question from being submitted:</h2>
  <ul>
    <% question.errors.full_messages each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @question do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <%= f.label :content %>:
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>

<%= link_to("Back", questions_path) %>
